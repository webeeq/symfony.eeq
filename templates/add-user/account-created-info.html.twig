{# templates/add-user/account-created-info.html.twig #}
{% extends 'layout.html.twig' %}

{% block title %}Informacja{% endblock %}

{% block record %}
    <h2>Informacja</h2>
    {% if activationEmail %}
        <p class="ok">
            Konto użytkownika zostało utworzone.<br />
            Sprawdź pocztę w celu aktywacji konta.
        </p>
    {% else %}
        <p class="bad">
            Konto użytkownika zostało utworzone.<br />
            Wysłanie e-mail'a aktywacyjnego nie powiodło się.
        </p>
    {% endif %}
{% endblock %}
